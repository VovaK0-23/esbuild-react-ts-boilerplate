{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",

    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "src",

    "strict": true,

    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,

    "noEmit": true,

    "skipLibCheck": true,

    "plugins": [{ "name": "typescript-plugin-css-modules" }],

    "paths": {
      "@/*": ["*"]
    }
  }
}
